use Assignments;

CREATE TABLE employees (
    id INT PRIMARY KEY,
    name VARCHAR(100),
    department VARCHAR(50),
    salary DECIMAL(10,2)
);

CREATE TABLE departments (
    dept_id INT PRIMARY KEY,
    dept_name VARCHAR(50)
);

INSERT INTO departments (dept_id, dept_name) VALUES
(1, 'Sales'),
(2, 'Engineering'),
(3, 'HR'),
(4, 'Finance');

INSERT INTO employees (id, name, department, salary) VALUES
(101, 'Alice Johnson', 'Sales', 55000.00),
(102, 'Bob Smith', 'Engineering', 72000.00),
(103, 'Charlie Davis', 'HR', 48000.00),
(104, 'Diana Lee', 'Finance', 65000.00),
(105, 'Ethan Brown', 'Engineering', 80000.00);

DELIMITER //
CREATE PROCEDURE getEmpName(IN deptId INT, OUT empName VARCHAR(50))
BEGIN
    SELECT ename
    INTO empName
    FROM employees
    WHERE deptno = deptId
    ORDER BY salary DESC
    LIMIT 1;
END //
DELIMITER ;

